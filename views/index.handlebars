<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h1>Eat Da Burger!!</h1>
        </div>
    </div>
    <div class="row mb-">
        <div class="col-12 d-flex justify-content-center">
            <img src="/assets/img/burger.png" alt="Burger image.">
        </div>
    </div>

    {{!-- Burger lists display here --}}
    <div class="row">

        {{!-- Burgers to devour --}}
        <div class="col-md-8">
            <div class="row">
                <div class="col-12">
                    <h3 class="text-center m-3">Available Burgers</h3>
                </div>
            </div>
            {{#each burger}}
            {{#unless devoured}}
            <div class="row">
                <div class="col-md-6 to-devour p-2 mb-2">
                    <p class="mb-0">{{id}}. {{burger_name}}</p>
                </div>
                <div class="col-md-6 mb-2 align-middle d-flex justify-content-center">
                    <button class="devour" data-id="{{id}}">
                        DEVOUR IT!
                    </button>
                </div>
            </div>
            {{/unless}}
            {{/each}}
        </div>

        {{!-- Devoured burgers --}}
        <div class="col-md-4">
            <h3 class="text-center m-3">Devoured Burgers</h3>
            {{#each burger}}
            {{#if devoured}}
            <div class="row">
                <div class="col-12 p-2 m-1 devoured d-flex align-middle">
                    <p class="mb-0">{{id}}. {{burger_name}}</p>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>

    {{!-- Add a burger form --}}
    <div class="row m-5">
        <div class="col-12 d-flex justify-content-center">
            <form class="create-form text-center">
                Add a burger!<br>
                <input type="text" name="burger-name" id="newBurgerName" class="mt-3"><br>
                <button type="submit" value="Submit" id="addBurgerButton" class="mt-3">submit</button>
            </form>
        </div>
    </div>
</div>